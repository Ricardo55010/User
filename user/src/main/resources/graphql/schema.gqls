type UserDTO {
    id: ID!
    name: String
    age: Int
    wage: Int
}

input UserInput{
    id: Int!
    name: String!
    age: Int
        wage: Int
}

# The Root Query for the application
type Query {
    getUser(id: Int): UserDTO!
}

# The Root Mutation for the application
type Mutation {
    createUser(user: UserInput!) : UserDTO!
    updateUser(user: UserInput!) : UserDTO!
    deleteUser(id: Int!): UserDTO!
}